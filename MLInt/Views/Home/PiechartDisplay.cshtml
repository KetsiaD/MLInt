@{
    ViewData["Title"] = "Sentiment Analysis Results";
}

<h1>Sentiment Analysis Results</h1>

@if (!string.IsNullOrEmpty(ViewBag.ChartPath))
{
    <img src="@ViewBag.ChartPath" alt="Sentiment Analysis Chart" style="max-width:100%; height:auto;" />
}

@if (!string.IsNullOrEmpty(ViewBag.CsvFilePath))
{
    <a href="@ViewBag.CsvFilePath" download>Download CSV</a>
}
else
{
    <p>No CSV available.</p>
}

