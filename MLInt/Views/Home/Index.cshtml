@model MLInt.Models.UploadModel

<h2>Upload a File</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="file" name="uploadedFile" />
    </div>
     <div class="form-group">
        <label for="algorithm">Select Machine Learning tool</label>
        <select name="algorithm" class="form-control" style="width: 140px" required>
            <option value="Vader">Vader Sentiment Analysis</option>
            <option value="Algorithm1">ML.net Sentiment Analysis</option>
            <option value="Algorithm2">Option3</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

